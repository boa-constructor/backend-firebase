{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "serve": "yarn build && firebase emulators:start --only functions,firestore --import=./firestore_export",
    "db:update-local-from-remote": "yarn db:backup-remote && gsutil -m cp -r gs://my-firebase-bucket.appspot.com/firestore_export .",
    "db:update-remote-from-local": "yarn db:backup-local && yarn db:backup-remote && gsutil -m cp -r ./firestore_export gs://dndinder-68dcc.appspot.com && yarn run db:import-remote",
    "db:import-remote": "gcloud firestore import gs:/dndinder-68dcc.appspot.com/firestore_export",
    "db:backup-local": "firebase emulators:export --force .",
    "db:rename-remote-backup-folder": "gsutil mv gs://dndinder-68dcc.appspot.com/firestore_export gs://dndinder-68dcc.appspot.com/firestore_export_$(date +%d-%m-%Y-%H-%M)",
    "db:backup-remote": "yarn db:rename-remote-backup-folder && gcloud firestore export gs://dndinder-68dcc.appspot.com/firestore_export",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "jest",
    "die": "npx kill-port 9099 5001 8080 9000 5002 8085 9199"
  },
  "engines": {
    "node": "16"
  },
  "main": "index.js",
  "dependencies": {
    "express": "^4.18.1",
    "firebase-admin": "^10.0.2",
    "firebase-functions": "^3.18.0",
    "jest": "^28.0.3",
    "supertest": "^6.2.3"
  },
  "devDependencies": {
    "firebase-functions-test": "^0.2.3"
  },
  "private": true
}
